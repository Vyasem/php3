<?xml version="1.0" encoding="UTF-8"?>

<project name="PHP-3" basedir="D:/Projects/php3_lesson_1/public_html">
    <target name="rename">
        <php function="date" returnProperty="build.time">
            <params value="d-m-Y-H-i-s" />
        </php>
        <property name="build.dir" value="D:/Projects/php3_lesson_1/${build.time}"/>
    </target>

    <target name="copy-files" depends="rename">
        <copy todir="${build.dir}">
            <fileset dir="${project.basedir}/">
                <include name="**"/>
            </fileset>
        </copy>
    </target>

    <target name="make-config" depends="copy-files">
        <copy todir="${build.dir}">
            <fileset dir="${project.basedir}/">
                <include name="**"/>
            </fileset>
        </copy>
    </target>
</project>